{
  "tasks": {
    "start": "deno run --allow-read src/main.js",
    "test": "deno test --allow-read --unsafely-ignore-certificate-errors --reporter=dot",
    "new": "deno run --allow-write --allow-read --unsafely-ignore-certificate-errors --allow-net scripts/new.js",
    "fmt": "deno fmt"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve",
    "semiColons": false
  }
}